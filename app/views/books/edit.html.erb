
<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
  	<% end %>
<% end %>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>
    <%=link_to "Show", book_path(@book.id) %>
    <%=link_to "Back", books_path %>
<% end %>