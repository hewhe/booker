<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <%= f.text_field :title, placeholder:"Title" %>
    <%= f.text_area :body, placeholder:"Body" %>
    <%= f.submit %>
<% end %>



<div>
	<!--<h>aaaa</h>-->
	<% @books.each do |book| %>
	<!--userの画像載せる-->
	<li>
		<%= link_to "#{book.title}", book_path(book.id) %> <!--<%= book.title %>-->
	</li>
	<li>
		<%= book.body %>
	</li>
	<% end %>
</div>