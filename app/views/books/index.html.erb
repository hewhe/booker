<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div>
				<%= attachment_image_tag current_user, :profile_image, size: "70x70", fallback: "images.png" %>
				<p><%= current_user.name %></p>
				<p><%= current_user.introduction %></p>
				<% if user_signed_in? %>
				<p>
				<%= link_to "edit", edit_user_path(current_user.id) %>
				</p>
				<% end %>
			</div>

			<div>
				<% if @book.errors.any? %>
				    <%= @book.errors.count %>件のエラーが発生しました
				    <% @book.errors.full_messages.each do |message| %>
				        <%= message %>
				    <% end %>
				<% end %>

				<%= form_for(@book) do |f| %>

				    <%= f.text_field :title, placeholder:"Title" %>
				    <%= f.text_area :body, placeholder:"Body" %>
				    <%= f.submit %>
				<% end %>
			</div>
		</div>


		<div class="col-md-8">
			<!--<h>aaaa</h>-->
			<% @books.each do |book| %>
			<!--userの画像載せる-->
			<%= link_to user_path(book.user_id) do %>
				<%= attachment_image_tag book.user, :profile_image, size: "30x30", fallback: "images.png" %>
			<% end %>
			<li>
				<%= link_to "#{book.title}", book_path(book.id) %> <!--<%= book.title %>-->
			</li>
			<li>
				<%= book.body %>
			</li>
			<% end %>
		</div>
	</div>
</div>