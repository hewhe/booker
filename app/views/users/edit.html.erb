<div>
	<h1>User info</h1>
	<% if @user.errors.any? %>
	    <%= @user.errors.count %>件のerrorが発生しました
	    <% @user.errors.full_messages.each do |message| %>
	        <%= message %>
	  	<% end %>
	<% end %>

	<%= form_for(@user) do |f| %>
		<%= f.text_field :name, autofocus: true, placeholder:"Name"%>

		<%= f.attachment_field :profile_image %>

		<%= f.text_area :introduction, placeholder:"introduction" %>

		<%= f.submit 'Update User' %>
	<% end %>
</div>