<div>
	<!--<h>aaaa</h>-->
	<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "" %>
	<%= @user.name %>
	<%= @user.introduction %>

	<% @user.books.each do |book| %>
	<!--userの画像載せる-->
	<%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "" %>
	<li>
		<%= link_to "#{book.title}", book_path(book.id) %> <!--<%= book.title %>-->
	</li>
	<li>
		<%= book.body %>
	</li>
	<% end %>

	<% if @user.id == current_user.id %>
	<li>
		<%= link_to "edit", edit_user_path(@user.id) %>
	</li>
	<% end %>
</div>